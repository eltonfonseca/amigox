<!DOCTYPE html>
<html>

<head>
    <title>AmigoX</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
</head>

<body class="page-top">
    <%= render partial: 'shared/navigation_bar' %>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="list-group list-group-flush">
                <%= link_to 'Integrantes', group_path(session[:group_id]), class: "list-group-item list-group-item-action bg-light" %>
                <%= link_to 'Meu Amigo', group_friend_path(session[:group_id]), class: "list-group-item list-group-item-action bg-light" %>
                <%= link_to 'Chat', groups_path, class: "list-group-item list-group-item-action bg-light" %>
                <%= link_to 'Convidar', root_path, class: "list-group-item list-group-item-action bg-light" %>
                <%= link_to 'Sair', groups_path, class: "list-group-item list-group-item-action bg-light" %>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <%= yield %>
    </div>
</body>

</html>